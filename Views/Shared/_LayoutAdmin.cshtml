@{
    bool isAjax = ViewData["IsAjax"] != null && (bool)ViewData["IsAjax"];
}

@if (!isAjax)
{
    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Puerto 92</title>
        
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
              integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" 
              crossorigin="anonymous" 
              referrerpolicy="no-referrer" />
        
        <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/app-navigation.css" asp-append-version="true" />
        
        <link rel="stylesheet" href="~/css/categorias.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/asignaciones.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/kardex-bebidas.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/kardex-salon.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/kardex-cocina.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/personal-presente.css" asp-append-version="true" />
        
        @await RenderSectionAsync("Styles", required: false)
    </head>
    <body>
        <div class="admin-container">
            @* Sidebar usando View Component *@
            @await Component.InvokeAsync("Sidebar")

            <!-- Main Content -->
            <main class="main-content">
                <div style="position: absolute; top: 1.5rem; right: 2rem; z-index: 1000;">
                    @await Component.InvokeAsync("NotificationBell")
                </div>
                <!-- Notificaciones -->
                <div id="notifications-container">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fa-solid fa-circle-check"></i>
                            <span>@TempData["Success"]</span>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fa-solid fa-circle-exclamation"></i>
                            <span>@TempData["Error"]</span>
                        </div>
                    }
                </div>

                <!-- Contenedor dinámico -->
                <div id="main-content-area" class="content-loaded">
                    @RenderBody()
                </div>
            </main>
        </div>

        <!-- Contenedor de modales (fuera del admin-container) -->
        <div id="modals-container"></div>
        <partial name="Partials/_NotificationPopup" />

        <!-- Scripts base -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/modal-manager.js" asp-append-version="true"></script>
        <script src="~/js/app-navigation.js" asp-append-version="true"></script>
        <script src="~/js/notifications.js" asp-append-version="true"></script>
        
        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
}
else
{
    @* Petición AJAX - Devolver solo el contenido *@
    @RenderBody()
    
    @* Ignorar la sección Styles en peticiones AJAX *@
    @if (IsSectionDefined("Styles"))
    {
        IgnoreSection("Styles");
    }
    
    @await RenderSectionAsync("Scripts", required: false)
}