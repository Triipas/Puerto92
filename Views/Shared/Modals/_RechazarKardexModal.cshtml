@* Modal para Rechazar Kardex *@

<div id="modalRechazar" class="modal-overlay" style="display: none;">
    <div class="modal-container" style="max-width: 500px;">
        <div class="modal-header">
            <div>
                <h2 class="modal-title">Rechazar Kardex</h2>
                <p class="modal-subtitle" id="rechazarModalSubtitle">Especifique el motivo del rechazo</p>
            </div>
            <button class="modal-close" onclick="closeModal('modalRechazar')">&times;</button>
        </div>
        <form id="formRechazar">
            <div class="modal-body">
                <div style="background: #FEF2F2; border-left: 3px solid #EF4444; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem;">
                    <div style="display: flex; align-items: start; gap: 0.75rem;">
                        <i class="fa-solid fa-exclamation-circle" style="color: #EF4444; font-size: 20px; margin-top: 2px;"></i>
                        <div>
                            <strong style="color: #991B1B; font-size: 14px; display: block; margin-bottom: 0.25rem;" id="rechazarModalMensaje">
                                Se rechazará el kardex
                            </strong>
                            <p style="color: #991B1B; font-size: 13px; margin: 0;" id="rechazarModalDetalle">
                                El empleado deberá corregir y reenviar el kardex
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        Motivo del rechazo <span style="color: #EF4444;">*</span>
                    </label>
                    <textarea id="motivoRechazo" 
                              class="form-control" 
                              rows="4"
                              placeholder="Especifique claramente por qué se rechaza el kardex..."
                              maxlength="1000"
                              required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('modalRechazar')">Cancelar</button>
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-xmark"></i>
                    Rechazar Kardex
                </button>
            </div>
        </form>
    </div>
</div>
