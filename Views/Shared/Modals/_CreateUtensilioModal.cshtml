@* Partial View: Modal para Crear Utensilio *@

<div id="createUtensilioModal" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="background: #10B981; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fa-solid fa-utensils"></i>
                </div>
                <div>
                    <h2 class="modal-title">Crear Nuevo Utensilio</h2>
                    <p class="modal-subtitle">Complete los datos para registrar un nuevo utensilio en el sistema</p>
                </div>
            </div>
            <button class="modal-close" onclick="closeModal('createUtensilioModal')">&times;</button>
        </div>
        <form id="createForm" asp-action="CreateAjax" asp-controller="Utensilios" method="post">
            <div class="modal-body">
                <!-- Código Automático Info -->
                <div style="background: #EFF6FF; border: 1px solid #BFDBFE; border-radius: 8px; padding: 0.75rem; margin-bottom: 1rem; display: flex; gap: 0.5rem;">
                    <i class="fa-solid fa-info-circle" style="color: #3B82F6; margin-top: 2px;"></i>
                    <div>
                        <strong style="color: #1E40AF; font-size: 13px;">Código Automático:</strong>
                        <span style="color: #1E40AF; font-size: 12px;"> Se generará automáticamente según el tipo de utensilio.</span>
                    </div>
                </div>

                <!-- Código -->
                <div class="form-group">
                    <label class="form-label">Código <span style="color: red;">*</span></label>
                    <input type="text" id="createCodigo" name="Codigo" class="form-control" readonly required />
                </div>

                <!-- Nombre -->
                <div class="form-group">
                    <label class="form-label">Nombre <span style="color: red;">*</span></label>
                    <input type="text" id="createNombre" name="Nombre" class="form-control" placeholder="Ej: Sartén Antiadherente 28cm" required />
                </div>

                <!-- Tipo -->
                <div class="form-group">
                    <label class="form-label">Tipo <span style="color: red;">*</span></label>
                    <select id="createTipo" name="Tipo" class="form-select" required>
                        <option value="">Seleccione tipo</option>
                        <option value="Cocina">Cocina</option>
                        <option value="Mozos">Mozos</option>
                        <option value="Vajilla">Vajilla</option>
                    </select>
                </div>

                <!-- Unidad -->
                <div class="form-group">
                    <label class="form-label">Unidad <span style="color: red;">*</span></label>
                    <input type="text" name="Unidad" class="form-control" placeholder="Ej: Unidad, Set, Caja" required />
                </div>

                <!-- Precio -->
                <div class="form-group">
                    <label class="form-label">Precio <span style="color: red;">*</span></label>
                    <input type="number" name="Precio" class="form-control" step="0.01" placeholder="Ej: 85.50" required />
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label class="form-label">Descripción</label>
                    <textarea name="Descripcion" class="form-control" rows="2" placeholder="Opcional: Detalles del utensilio"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('createUtensilioModal')">Cancelar</button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>
                    Crear Utensilio
                </button>
            </div>
        </form>
    </div>
</div>