@model string
@* Modal para Crear Categoría *@

<div id="createCategoriaModal" class="modal-overlay" style="display: none;">
    <div class="modal-container" style="max-width: 500px;">
        <div class="modal-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="background: rgba(59, 130, 246, 0.1); width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                    <i class="fa-solid fa-tag" style="color: #3B82F6; font-size: 22px;"></i>
                </div>
                <div>
                    <h2 class="modal-title">Agregar Nueva Categoría</h2>
                    <p class="modal-subtitle">Complete los datos para crear una nueva categoría</p>
                </div>
            </div>
            <button class="modal-close" onclick="closeModal('createCategoriaModal')">&times;</button>
        </div>
        <form id="createCategoriaForm" asp-action="Create" asp-controller="Categorias" method="post">
            <div class="modal-body">
                <!-- Campo oculto para el tipo -->
                <input type="hidden" id="createTipo" name="Tipo" value="@Model" />

                <!-- Tipo de Categoría -->
                <div class="form-group">
                    <label class="form-label">
                        Tipo de Categoría <span style="color: #EF4444;">*</span>
                    </label>
                    <select id="createTipoSelect" class="form-select" disabled style="background: #F9FAFB; cursor: not-allowed;">
                        @if (Model == "Bebidas")
                        {
                            <option value="Bebidas" selected>Bebidas</option>
                        }
                        else
                        {
                            <option value="Bebidas">Bebidas</option>
                        }

                        @if (Model == "Cocina")
                        {
                            <option value="Cocina" selected>Cocina</option>
                        }
                        else
                        {
                            <option value="Cocina">Cocina</option>
                        }

                        @if (Model == "Utensilios")
                        {
                            <option value="Utensilios" selected>Utensilios</option>
                        }
                        else
                        {
                            <option value="Utensilios">Utensilios</option>
                        }
                    </select>
                    <small style="color: #64748B; font-size: 12px; display: block; margin-top: 0.375rem;">
                        Puedes cambiar entre tipos usando las pestañas superiores
                    </small>
                </div>

                <!-- Nombre de la Categoría -->
                <div class="form-group">
                    <label class="form-label">
                        Nombre de Categoría <span style="color: #EF4444;">*</span>
                    </label>
                    <input type="text" 
                           name="Nombre" 
                           id="createNombre"
                           class="form-control" 
                           placeholder="Ej: Calientes y Arroces" 
                           required 
                           maxlength="100" />
                    <small style="color: #64748B; font-size: 12px; display: block; margin-top: 0.375rem;">
                        El nombre debe ser único dentro del tipo seleccionado
                    </small>
                </div>

                <!-- Orden de Visualización -->
                <div class="form-group">
                    <label class="form-label">
                        Orden de Visualización <span style="color: #EF4444;">*</span>
                    </label>
                    <input type="number" 
                           name="Orden" 
                           id="createOrden"
                           class="form-control" 
                           placeholder="1" 
                           min="1" 
                           max="999"
                           required />
                    <small style="color: #64748B; font-size: 12px; display: block; margin-top: 0.375rem;">
                        Orden sugerido: <strong id="ordenSugerido">1</strong>. Este orden define como aparecerá en kardex y desplegables.
                    </small>
                </div>

                <!-- Estado (oculto, siempre activo al crear) -->
                <input type="hidden" name="Activo" value="true" />

                <!-- Información -->
                <div style="background: #DBEAFE; border-left: 3px solid #3B82F6; padding: 1rem; border-radius: 6px; margin-top: 1rem;">
                    <div style="font-size: 13px; color: #1E40AF;">
                        <strong style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
                            <i class="fa-solid fa-lightbulb"></i>
                            Nueva categoría:
                        </strong>
                        <p style="margin: 0; font-size: 12px; line-height: 1.6;">
                            Una vez creada, podrá asignar productos a esta categoría y aparecerá en todos los desplegables del sistema según el orden definido.
                        </p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('createCategoriaModal')">Cancelar</button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Crear Categoría
                </button>
            </div>
        </form>
    </div>
</div>