@* Partial View: Modal para Desactivar Utensilio *@

<div id="deactivateModal" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="background: #EF4444; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fa-solid fa-ban"></i>
                </div>
                <div>
                    <h2 class="modal-title">Desactivar Utensilio</h2>
                    <p class="modal-subtitle">Confirmar la desactivación del utensilio</p>
                </div>
            </div>
            <button class="modal-close" onclick="closeModal('deactivateModal')">&times;</button>
        </div>

        <form id="deactivateForm" method="post">
            <div class="modal-body">
                <input type="hidden" id="deactivateId" name="Id" />
                <p>¿Desea desactivar el siguiente utensilio?</p>
                <ul style="list-style: none; padding-left: 0;">
                    <li><strong>Código:</strong> <span id="deactivateCodigo"></span></li>
                    <li><strong>Nombre:</strong> <span id="deactivateNombre"></span></li>
                    <li><strong>Tipo:</strong> <span id="deactivateTipo"></span></li>
                </ul>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('deactivateModal')">Cancelar</button>
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-ban"></i>
                    Desactivar Utensilio
                </button>
            </div>
        </form>
    </div>
</div>