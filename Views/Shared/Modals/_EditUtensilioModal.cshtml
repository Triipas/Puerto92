@* Partial View: Modal para Editar Utensilio *@

<div id="editModal" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="background: #F59E0B; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fa-solid fa-pen"></i>
                </div>
                <div>
                    <h2 class="modal-title">Editar Utensilio</h2>
                    <p class="modal-subtitle">Modifica los datos del utensilio seleccionado</p>
                </div>
            </div>
            <button class="modal-close" onclick="closeModal('editModal')">&times;</button>
        </div>

        <form id="editForm" method="post">
            <div class="modal-body">
                <input type="hidden" id="editId" name="Id" />

                <div class="form-group">
                    <label class="form-label">Nombre <span style="color:red">*</span></label>
                    <input type="text" id="editNombre" name="Nombre" class="form-control" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Tipo <span style="color:red">*</span></label>
                    <select id="editTipo" name="Tipo" class="form-select" required>
                        <option value="Cocina">Cocina</option>
                        <option value="Mozos">Mozos</option>
                        <option value="Vajilla">Vajilla</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Unidad <span style="color:red">*</span></label>
                    <input type="text" id="editUnidad" name="Unidad" class="form-control" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Precio <span style="color:red">*</span></label>
                    <input type="number" step="0.01" id="editPrecio" name="Precio" class="form-control" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Descripci√≥n</label>
                    <textarea id="editDescripcion" name="Descripcion" class="form-control"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('editModal')">Cancelar</button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save"></i>
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>