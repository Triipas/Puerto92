@* Partial View: Modal para Carga Masiva de Productos *@

<div id="bulkUploadModal" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <div>
                <h2 class="modal-title">Carga Masiva de Productos</h2>
                <p class="modal-subtitle">Suba un archivo CSV o Excel con los productos</p>
            </div>
            <button class="modal-close" onclick="closeModal('bulkUploadModal')">&times;</button>
        </div>
        <form id="bulkUploadForm" method="post" enctype="multipart/form-data">
            <div class="modal-body">
                <div id="fileUploadArea" class="file-upload-area">
                    <input type="file" id="bulkUploadFile" name="file" accept=".csv,.xlsx,.xls" onchange="handleFileSelect(event)" />
                </div>
                <button type="button" id="validateButton" class="btn btn-primary" style="display:none;" onclick="validarArchivo()">
                    <i class="fa-solid fa-check"></i> Validar
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('bulkUploadModal')">Cancelar</button>
            </div>
        </form>
        <button type="button" class="btn btn-success mt-2" onclick="descargarPlantilla()">
            <i class="fa-solid fa-download"></i> Descargar Plantilla
        </button>
    </div>
</div>