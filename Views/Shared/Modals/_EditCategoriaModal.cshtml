@* Modal para Editar Categoría *@

<div id="editCategoriaModal" class="modal-overlay" style="display: none;">
    <div class="modal-container" style="max-width: 500px;">
        <div class="modal-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="background: rgba(59, 130, 246, 0.1); width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                    <i class="fa-solid fa-pen-to-square" style="color: #3B82F6; font-size: 22px;"></i>
                </div>
                <div>
                    <h2 class="modal-title">Editar Categoría</h2>
                    <p class="modal-subtitle">Modifique los datos de la categoría</p>
                </div>
            </div>
            <button class="modal-close" onclick="closeModal('editCategoriaModal')">&times;</button>
        </div>
        <form id="editCategoriaForm" method="post">
            <input type="hidden" id="editCategoriaId" name="Id" />
            <input type="hidden" id="editCategoriaTipo" name="Tipo" />
            <div class="modal-body">
                <!-- Tipo de Categoría (solo lectura) -->
                <div class="form-group">
                    <label class="form-label">Tipo de Categoría</label>
                    <div style="background: #F9FAFB; border: 1px solid #E5E7EB; padding: 0.875rem; border-radius: 8px;">
                        <div style="display: flex; align-items: center; gap: 0.75rem;">
                            <i id="editCategoriaTipoIcono" class="fa-solid fa-wine-glass" style="font-size: 20px; color: #64748B;"></i>
                            <div>
                                <div style="font-weight: 600; color: #1E293B; font-size: 15px;" id="editCategoriaTipoTexto">Cocina</div>
                                <small style="color: #64748B; font-size: 12px;">El tipo no puede modificarse</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Nombre de la Categoría -->
                <div class="form-group">
                    <label class="form-label">
                        Nombre de Categoría <span style="color: #EF4444;">*</span>
                    </label>
                    <input type="text" 
                           id="editCategoriaNombre" 
                           name="Nombre" 
                           class="form-control" 
                           required 
                           maxlength="100" />
                    <small style="color: #64748B; font-size: 12px; display: block; margin-top: 0.375rem;">
                        El nombre debe ser único dentro del tipo seleccionado
                    </small>
                </div>

                <!-- Orden de Visualización -->
                <div class="form-group">
                    <label class="form-label">
                        Orden de Visualización <span style="color: #EF4444;">*</span>
                    </label>
                    <input type="number" 
                           id="editCategoriaOrden" 
                           name="Orden" 
                           class="form-control" 
                           min="1" 
                           max="999"
                           required />
                    <small style="color: #64748B; font-size: 12px; display: block; margin-top: 0.375rem;">
                        Orden sugerido: <strong id="editOrdenSugerido">7</strong>. Este orden define como aparecerá en kardex y desplegables.
                    </small>
                </div>

                <!-- Estado (oculto, se mantiene el actual) -->
                <input type="hidden" id="editCategoriaActivo" name="Activo" />

                <!-- Advertencia sobre cambios -->
                <div style="background: #FEF3C7; border-left: 3px solid #F59E0B; padding: 1rem; border-radius: 6px; margin-top: 1rem;">
                    <div style="font-size: 13px; color: #92400E;">
                        <strong style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
                            <i class="fa-solid fa-triangle-exclamation"></i>
                            Importante:
                        </strong>
                        <p style="margin: 0; font-size: 12px; line-height: 1.6;">
                            Al cambiar el nombre, se actualizará automáticamente en todos los productos asignados, kardex y vistas operativas del sistema.
                        </p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('editCategoriaModal')">Cancelar</button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>