@* Partial View: Modal para Editar Local *@

<div id="editLocalModal" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="background: #0092B8; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fa-solid fa-store"></i>
                </div>
                <div>
                    <h2 class="modal-title">Editar Local</h2>
                    <p class="modal-subtitle">Modifique los datos del local según sea necesario</p>
                </div>
            </div>
            <button class="modal-close" onclick="closeModal('editLocalModal')">&times;</button>
        </div>
        <form id="editLocalForm" method="post">
            <input type="hidden" id="editLocalId" name="Id" />
            <div class="modal-body">
                <!-- Código del Local (no editable) -->
                <div class="form-group">
                    <label class="form-label">Código del Local</label>
                    <div style="background: #F9FAFB; border: 1px solid #E5E7EB; padding: 0.75rem; border-radius: 8px;">
                        <div style="font-weight: 600; color: #1E293B; font-size: 16px;" id="editLocalCodigo">LOC-01</div>
                        <small style="color: #64748B; font-size: 12px;">El código no puede ser modificado</small>
                    </div>
                    <input type="hidden" id="editLocalCodigoInput" name="Codigo" />
                </div>

                <!-- Nombre del Local -->
                <div class="form-group">
                    <label class="form-label">Nombre del Local <span style="color: red;">*</span></label>
                    <input type="text" id="editLocalNombre" name="Nombre" class="form-control" placeholder="Local Centro" required />
                </div>

                <!-- Dirección -->
                <div class="form-group">
                    <label class="form-label">Dirección <span style="color: red;">*</span></label>
                    <input type="text" id="editLocalDireccion" name="Direccion" class="form-control" placeholder="Av. Principal 123" required />
                </div>

                <!-- Distrito y Ciudad -->
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label class="form-label">Distrito <span style="color: red;">*</span></label>
                        <input type="text" id="editLocalDistrito" name="Distrito" class="form-control" placeholder="Lima" required />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Ciudad <span style="color: red;">*</span></label>
                        <input type="text" id="editLocalCiudad" name="Ciudad" class="form-control" placeholder="Lima" required />
                    </div>
                </div>

                <!-- Teléfono -->
                <div class="form-group">
                    <label class="form-label">Teléfono <span style="color: red;">*</span></label>
                    <input type="text" id="editLocalTelefono" name="Telefono" class="form-control" placeholder="+51 987654321" required />
                </div>

                <!-- Estado -->
                <div class="form-group">
                    <label class="form-label">Estado <span style="color: red;">*</span></label>
                    <select id="editLocalActivo" name="Activo" class="form-select">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="closeModal('editLocalModal')">Cancelar</button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save"></i>
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>