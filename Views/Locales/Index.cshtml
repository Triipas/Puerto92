@model IEnumerable<Puerto92.ViewModels.LocalViewModel>
@{
    ViewData["Title"] = "Gesti贸n de Locales";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Gesti贸n de Locales</h1>
    <p class="page-subtitle">Administrar los puntos de venta del restaurante</p>
</div>

<!-- Stats Cards -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon primary">
            <i class="fa-solid fa-store"></i>
        </div>
        <div class="stat-content">
            <h3>@Model.Count()</h3>
            <p>Total Locales</p>
            <small style="color: #64748B;">En el sistema</small>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon success">
            <i class="fa-solid fa-check-circle"></i>
        </div>
        <div class="stat-content">
            <h3>@Model.Count(l => l.Activo)</h3>
            <p>Locales Activos</p>
            <small style="color: #64748B;">En operaci贸n</small>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon danger">
            <i class="fa-solid fa-times-circle"></i>
        </div>
        <div class="stat-content">
            <h3>@Model.Count(l => !l.Activo)</h3>
            <p>Locales Inactivos</p>
            <small style="color: #64748B;">Cerrados temporalmente</small>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon warning">
            <i class="fa-solid fa-users"></i>
        </div>
        <div class="stat-content">
            <h3>@Model.Sum(l => l.CantidadUsuarios)</h3>
            <p>Personal Total</p>
            <small style="color: #64748B;">En todos los locales</small>
        </div>
    </div>
</div>

<!-- Content Card -->
<div class="content-card">
    <div class="card-header">
        <div>
            <h2 class="card-title">Lista de Locales</h2>
            <p style="font-size: 13px; color: #64748B; margin-top: 4px;">
                @Model.Count() local(es) registrado(s)
            </p>
        </div>
        <button onclick="openCreateLocalModal()" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Crear Local
        </button>
    </div>

    <div class="card-body">
        <!-- Buscador -->
        <div style="margin-bottom: 1.5rem;">
            <input type="text" id="searchInput" class="form-control" placeholder=" Buscar locales..." style="max-width: 400px;" />
        </div>

        <!-- Tabla -->
        <div class="table-responsive">
            <table class="table" id="localesTable">
                <thead>
                    <tr>
                        <th>C贸digo</th>
                        <th>Nombre</th>
                        <th>Direcci贸n</th>
                        <th>Distrito</th>
                        <th>Tel茅fono</th>
                        <th>Personal</th>
                        <th>Estado</th>
                        <th style="text-align: center;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var local in Model)
                    {
                        <tr>
                            <td style="font-weight: 600;">@local.Codigo</td>
                            <td style="font-weight: 500;">@local.Nombre</td>
                            <td>@(local.Direccion ?? "-")</td>
                            <td>@(local.Distrito ?? "-")</td>
                            <td>@(local.Telefono ?? "-")</td>
                            <td>
                                <span class="badge badge-success">@local.CantidadUsuarios usuario(s)</span>
                            </td>
                            <td>
                                @if (local.Activo)
                                {
                                    <span class="badge badge-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactivo</span>
                                }
                            </td>
                            <td style="text-align: center;">
                                <div style="display: flex; gap: 0.5rem; justify-content: center;">
                                    <button onclick="openEditLocalModal(@local.Id)" class="btn btn-sm" style="background: #3B82F6; color: white;" title="Editar">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                    <button onclick="openDeleteLocalModal(@local.Id, '@local.Codigo', '@local.Nombre', '@(local.Direccion ?? "")', '@(local.Distrito ?? "")', '@(local.Ciudad ?? "")')" 
                                            class="btn btn-sm btn-danger" title="Desactivar">
                                        <i class="fa-solid fa-ban"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Cargar Modales usando Partial Views *@
<partial name="Modals/_CreateLocalModal" />
<partial name="Modals/_EditLocalModal" />
<partial name="Modals/_DeleteLocalModal" />

@section Scripts {
    <script src="~/js/locales-modals.js" asp-append-version="true"></script>
}